<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_layout_main_activity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:text="@string/tv_count_text"
        android:textSize="@dimen/default_text_tv_count"
        android:textAlignment="center"
        android:textColor="@color/colorTextCount"
        android:autoSizeMinTextSize="@dimen/smaller_text_tv_count"
        />

    <Button
        android:id="@+id/btn_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_btn_count_en"
        android:textSize="40sp"
        android:background="@drawable/button_bg_rounded_blue_top"
        android:textColor="@color/colorWhite"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_btn_reset_en"
        android:textSize="40sp"
        android:background="@drawable/button_bg_dashed_rounded_bottom"
        android:textColor="@color/colorTextCount"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>